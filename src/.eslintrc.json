{
  "extends": "nugit/base",
  "rules": {
    "eqeqeq": ["error", "always", {"null": "ignore"}],
    "flowtype/require-valid-file-annotation": [
      "error",
      "always",
      {
        "annotationStyle": "line",
        "strict": false
      }
    ]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}